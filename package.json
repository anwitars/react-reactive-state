{
  "name": "@anwitars/reactive-state",
  "version": "1.0.0",
  "description": "Simple wrapper to easily manage multiple useStates in a component.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/index.cjs.js --format=cjs",
    "build:esm": "esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/index.esm.js --format=esm",
    "test": "jest"
  },
  "keywords": [
    "react",
    "typescript",
    "npm-package"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anwitars/react-reactive-state"
  },
  "author": "anwitars",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17.0.2 <19"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.9",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}
